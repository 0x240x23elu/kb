# brute force
./hashcat-cli64.bin -o ~/current/users.md5.cracked -m 0 -a 3 --bf-pw-min=1 --bf-pw-max=8 --bf-cs-buf=abcdefghijklmnopqrstuvwxyz1234567890  ~/current/users.md5

